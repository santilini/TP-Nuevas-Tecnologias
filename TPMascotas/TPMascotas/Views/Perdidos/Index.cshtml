@model TPMascotas.ViewModels.PerdidoViewModel
@{
    ViewBag.Title = "Perdidos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>Perdidos</h2>

    <input type="text" id="myInput" class="form-control searchbox-input">

    <div class="row">



        @foreach (var Perdido in Model.paginacion())
        {

            <div class="col-md-4 inline-block">
                <div class="card" style="width: 100%;">
                    <img src="@Perdido.Foto" class="card-img-top img-thumbnail" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">  @Perdido.Zona</h5>
                        <p class="card-text">   @Perdido.Desc</p>
                        <p class="card-text">   @Perdido.Recompensa</p>
                        @Html.ActionLink("Me encontraste?", "Perdido", new { id = Perdido.Id }, null);
                    </div>
                </div>
            </div>






        }


    </div>




</div>

@Html.ActionLink("Agregar Publicacion", "Add", "Encontrados")
<script>

    $('input').change(function () {
        $('.card').hide();
        var filter = $(this).val();
        $(".card:contains('" + filter + "')").show();
    });


</script>