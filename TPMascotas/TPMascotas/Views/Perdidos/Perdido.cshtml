
@{
    ViewBag.Title = "Perdido";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Perdido</h2>

<div>
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="@Model.Foto" alt="">
        <div class="card-body">
            <h5 class="card-title"> @Model.TipoAnimal</h5>
            <p class="card-text">@Model.Desc</p>
            <p class="card-text">@Model.Recompensa</p>
            <p class="card-text">@Model.Zona</p>
            <a href="#" class="btn btn-primary">Contactame si tenes info</a>
        </div>
    </div>
</div>