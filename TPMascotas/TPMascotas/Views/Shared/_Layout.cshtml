<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - </title>
    @Styles.Render("~/Content/bootstrap.css")
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <link href="https://fonts.googleapis.com/css?family=Cabin&display=swap" rel="stylesheet">
</head>
<body>
    @{ var user = HttpContext.Current.Session["UserName"];
        var id = HttpContext.Current.Session["UserId"];}

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">@Html.ActionLink("Mascotas Web", "Index", "Home", new { area = "" }, new { @class = "navbar" })</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse justify-content-between" id="navbarNav">
            <ul class="navbar-nav mr-auto">

                <li class="nav-item">
                    <a class="nav-link" href="/Encontrados/Index"> Me viste? </a>

                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Perdidos/Index"> Estoy Perdido </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Adoptados/Index"> Adoptame!</a>
                </li>
            </ul>
            <ul class="navbar-nav">
                @if (user == null)
                {
                    <li class="nav-item">

                        <a href="/Usuarios/Login" class="nav-link">Logeate!</a>
                    </li>
                    <li class="nav-item">
                        <a href="/Usuarios/Registrar" class="nav-link"> Registrate! </a>
                    </li>

                }
                else
                {
                    String userName = "Bienvenido " + Convert.ToString(user);
                    <li class="nav-item">

                        <a href="/Usuarios/Perfil" class="nav-link">@userName </a>
                    </li>

                }
            </ul>


        </div>
    </nav>
    <div class="jumbotron body-content">
        @RenderBody()
        

    </div>
    <footer>
        <div class="container">
            <p>&copy; @DateTime.Now.Year - MascotasWeb - Nuevas tecnologias 1.</p>
        </div>
    </footer>
    @RenderSection("scripts", required: false)
</body>
</html>
