
@model TPMascotas.ViewModels.AdoptadoViewModel
    ViewBag.Title = "Adoptados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.message</h2>


<div class=" container">
    <h2>
        Publicaciones de Animales disponibles para adoptar.
    </h2>

    <ul>
        @foreach (var Adoptado in Model.Adoptados)
        {
            <li>
            @Adoptado.Desc
            @Adoptado.Edad
            @Adoptado.Nombre
                </li>
        }

      
    </ul>
    @Html.ActionLink("Animales add", "Add","Adoptados")
</div>