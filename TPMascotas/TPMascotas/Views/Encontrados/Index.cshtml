@model TPMascotas.ViewModels.EncontradoViewModel
@{
    ViewBag.Title = "Encontrados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>Encontrados</h2>

    <input type="text" id="myInput" class="form-control searchbox-input">

    <div class="row float-left">



        @foreach (var Encontrado in Model.paginacion())
        {

            <div class="col-md-4">
                <div class="card" style="width: 100%;">
                    <img src="@Encontrado.Foto" class="card-img-top img-thumbnail" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">  @Encontrado.Localidad</h5>
                        <p class="card-text">   @Encontrado.Desc</p>
                        @Html.ActionLink("Sos mi duenio?", "Encontrado", new { id = Encontrado.Id}, null);
                    </div>
                </div>
            </div>






        }


    </div>



    
</div>

@Html.ActionLink("Agregar Publicacion", "Add", "Encontrados")
<script>
    
    $('input').change(function () {
        $('.card').hide();
        var filter = $(this).val();
        $(".card:contains('" + filter + "')").show();
    });
    

</script>