@model TPMascotas.Models.Encontrado
@{
    ViewBag.Title = "Editar publicacion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<div class=" container">
    <h3>Ingrese los datos del animal encontrado.</h3>
    @using (Html.BeginForm("Edit", "Encontrados"))

    {
    <div class="form-group">
        @Html.LabelFor(m => m.TipoAnimal)
        @Html.TextBoxFor(m => m.TipoAnimal, new { @class = "form-control" })

        @Html.LabelFor(m => m.Raza)
        @Html.TextBoxFor(m => m.Raza, new { @class = "form-control" })
        @Html.LabelFor(m => m.Tamanio)
        @Html.TextBoxFor(m => m.Tamanio, new { @class = "form-control" })
        @Html.LabelFor(m => m.Localidad)
        @Html.TextBoxFor(m => m.Localidad, new { @class = "form-control" })
        @Html.LabelFor(m => m.Desc)
        @Html.TextBoxFor(m => m.Desc, new { @class = "form-control" })
        @Html.LabelFor(m => m.Genero)
        @Html.TextBoxFor(m => m.Genero, new { @class = "form-control" })
        @Html.LabelFor(m => m.Foto)
        @Html.TextBoxFor(m => m.Foto, new { @class = "form-control" })
        @Html.HiddenFor(m => m.UsuarioID)
        @Html.HiddenFor(m => m.Id)



        <button type="submit" onclick="location.href=@Url.Action("Edit", "Encontrados", null)" class="btn btn-primary">Editar la publicacion </button>

    </div>
    }  
</div>
   